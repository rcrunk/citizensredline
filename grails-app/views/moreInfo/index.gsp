      $("a.more").on("click", function (event) {
        if ($("#extra").prop("column"))
          $("#extra a.less").click()

        var p = $(this).parent()
        var topic = $(p).parent()
        var row = $(topic).parent()
        var extra = $("#extra")
        var column = $(topic).siblings().size() - $(topic).nextAll().size()

        var toNode
        if (column == 0) {
          toNode = $(topic).next()
          $(extra).prop("column", "prev")
        }
        else {
          toNode = $(topic).prev()
          $(extra).prop("column", "next")
        }

        $(topic).nextAll().each(function () {
          if ($(this).hasClass("clearfix")) {
            $(this).addClass("invisible")
            $(this).removeClass("visible-sm")
            $(this).removeClass("visible-md")
            $(this).removeClass("visible-lg")
          }
        })

        $(topic).detach()
        $(topic).removeClass("col-sm-6")
        $(topic).removeClass("col-md-6")
        $(topic).addClass("col-sm-12")
        $(topic).addClass("col-md-12")
        toNode.attr("id", "here")

        $(this).hide()
        $(p).siblings().each(function () {
          $(this).addClass("show")
        })

        $(extra).append($(topic).fadeIn(250))
        window.scroll(0, $("#page-header").offset().top - 85)
        event.preventDefault()
      })

      $("a.less").on("click", function (event) {
        var p = $(this).parent()
        var topic = $(p).parent()
        var extra = $("#extra")
        var column = $(extra).prop("column")

        $(topic).detach()
        $(topic).removeClass("col-sm-12")
