        $(topic).addClass("col-md-6")
        $(topic).addClass("col-sm-6")

        $(p).siblings(".detail").each(function () {
          $(this).removeClass("show")
        })
        $(p).removeClass("show")
        $(p).siblings(".teaser").children(".more").show()
        $(".clearfix.invisible").addClass("visible-sm")
        $(".clearfix.invisible").addClass("visible-md")
        $(".clearfix.invisible").addClass("visible-lg")
        $(".clearfix.invisible").removeClass("invisible")

        $("#here").each(function () {
          if (column === "next") {
            $(this).after($(topic).fadeIn(250))
          }
          else {
            $(this).before($(topic).fadeIn(250))
          }
          $(this).attr("id", "")
        })
        $(extra).removeProp("column")
        window.scroll(0, $(topic).offset().top)
        event.preventDefault()
      })
